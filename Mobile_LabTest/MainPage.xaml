<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Mobile_LabTest"
             x:Class="Mobile_LabTest.MainPage">



    <StackLayout>
        <Grid VerticalOptions="CenterAndExpand"
        RowDefinitions="*, *" ColumnDefinitions="auto,*"
        Margin="20">
            <Label x:Name="label1" Grid.Row="0"
        Grid.Column="0"
        HorizontalOptions="CenterAndExpand"/>
            <Slider x:Name="slider1" Grid.Row="0"
        Grid.Column="1"
        HorizontalOptions="FillAndExpand"></Slider>
            <Label x:Name="label2" Grid.Row="1"
        Grid.Column="2"
        HorizontalOptions="CenterAndExpand"/>
        </Grid>
        <Button
                Text="Question2" 
                Clicked="GoToSecondPageButtonClicked"/>

        <Button
                Text="Question3" 
                Clicked="GoToSecondPageButtonClicked2"/>
    </StackLayout>
    

</ContentPage>
